pipeline {
    agent any

    tools {
        maven 'M2_HOME'    // Nom de ton installation Maven dans Jenkins (v√©rifie dans Global Tool Configuration)
        jdk 'JAVA_HOME'        // Nom de ton installation Java dans Jenkins
    }

    environment {
        SONAR_TOKEN = credentials('jenkins-sonar') // ID du credential SonarQube dans Jenkins
        GIT_CREDS   = credentials('github-creds') // ID du credential Git dans Jenkins
    }

    stages {
        stage('Checkout Git') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/denden654/sonarqubesd.git',  // Remplace par TON URL GitHub
                    credentialsId: 'github-creds'  // ID de tes creds Git
            }
        }

        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sqsd') {  // Nom de ton serveur SonarQube configur√© dans Jenkins
                    sh 'mvn sonar:sonar -Dsonar.login=${SONAR_TOKEN}'
                }
            }
        }

        stage('Package (JAR)') {
            steps {
                sh 'mvn package -DskipTests'  // Skip tests pour tester vite, enl√®ve si tu as des tests
            }
        }

        // Optionnel : Archive le JAR pour le voir dans Jenkins
        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: '*/target/.jar', fingerprint: true
            }
        }
    }

    post {
        always {
            cleanWs()  // Nettoie l'espace de travail
        }
        success {
            echo 'Pipeline CI r√©ussi !'
        }
        failure {
            echo '√âchec du pipeline üôÅ'
        }
    }
}
